@inject SignInManager<IdentityUser> SignInManager
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu" crossorigin="anonymous">
    <base href="~/" />
</head>
<body>
    <div class="m-2">
        <h5 class="bg-secondary text-white text-center p-2">Razor Page</h5>
        @RenderBody()
    </div>

    <div>



        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admins"))
        {
            //Add Users Name
            <a method="post" asp-page="/Account/Logout" class="nav-link">Logout</a>
            <a class="nav-link" asp-page="/Roles/List">Manage Roles</a>
            <a class="nav-link" asp-page="/Users/List">Manage Users</a>

        }

        else if (SignInManager.IsSignedIn(User) && User.IsInRole("Researcher"))
        {



            //Add Users Name
            <a class="nav-link" method="post"  asp-page="/Account/Logout">Logout</a>

        }

        else if (SignInManager.IsSignedIn(User) && User.IsInRole("Viewer"))
        {

            //Add Users Name
            <a class="nav-link" method="post"  asp-page="/Account/Logout">Logout</a>

        }

        else if (SignInManager.IsSignedIn(User))
        {
            <a class="nav-link" method="post" asp-page="/Account/Logout">Logout</a>
        }




    </div>
    <script src="_framework/blazor.server.js"></script>
</body>
</html>