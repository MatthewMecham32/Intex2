@model HipViewModel


<div>
    <!--displays the associated hip info with the burial selected -->

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <h1>Hip Information</h1>
    <table class="table table-dark table-striped table-hover">
        <thead class="thead-light table-bordered table-condensed">
            <tr>
                <th>Burial ID</th>
                <th>Ventral Arc</th>
                <th>Subpubic Angle</th>
                <th>Sciatic Notch</th>
                <th>Pubic Bone</th>
                <th>Pubic Symphysis</th>
                <th>Iliac Crest</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model.Hip)
            {
            <tr>
                <td>@x.OurId</td>
                <td>@x.VentralArc</td>
                <td>@x.SubpubicAngle</td>
                <td>@x.SciaticNotch</td>
                <td>@x.PubicBone</td>
                <td>@x.PreaurSulcus</td>
                <td>@x.MedialIpRamus</td>
                <td>@x.DorsalPitting</td>
                <td>@x.PubicBone</td>
                <td>@x.PubicSymphysis</td>
                <td>@x.IliacCrest</td>

            </tr>

            }
        </tbody>
    </table>
    @*Allows the user to return to the "View Details" page for a specific burial*@

    @*<form asp-for="ViewDetails" method="get">
            <input hidden value="OurId" />
            <button type="submit">Click here to return to burial details.</button>
        </form>*@

    <!--button to take the user back to the burial list-->
    <form asp-action="BurialList" method="post">
        <button class="btn-info" type="submit">Burial list</button>
    </form>
</div>





